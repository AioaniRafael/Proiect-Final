@model IEnumerable<WebApplication1.Models.CosModel>

@{
    ViewBag.Title = "Cos de Cumparaturi";
}

<h2>Cos de Cumparaturi</h2>

<p>
    @Html.ActionLink("Adauga un produs la cosul de cumparaturi", "Index","Stoc")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id_Produs)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nume_Produs)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cantitate_Produs)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id_Produs)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nume_Produs)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cantitate_Produs)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.Id_Cos }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id_Cos }) |
            @Html.ActionLink("Elimina din cosul de cumparaturi", "DeleteProdus", new { id = item.Id_Cos })
        </td>
    </tr>
}

</table>
